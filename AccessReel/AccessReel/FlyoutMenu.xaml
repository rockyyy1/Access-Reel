<?xml version="1.0" encoding="utf-8" ?>
<FlyoutPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:AccessReel"
             x:Class="AccessReel.FlyoutMenu"
             Title="FlyoutMenu"
            FlyoutLayoutBehavior="Popover">
    
    <FlyoutPage.Flyout>
        
        <ContentPage Title="Flyout Menu">
            <StackLayout>
                <Label Text="Test Flyout Menu"/>
                <Button x:Name="BtnCloseMenu" Text="Close Page" Clicked="BtnCloseMenu_Clicked"/>
                <Button x:Name="BtnListPage" Text="ListPage" Clicked="BtnListPage_Clicked"/>
                <Button x:Name="BtnMainPage" Text="MainPage" Clicked="BtnMainPage_Clicked"/>
            </StackLayout>
        </ContentPage>
    </FlyoutPage.Flyout>
    <FlyoutPage.Detail>
        <NavigationPage>
            <x:Arguments>
                <local:ListPage/>
            </x:Arguments>
        </NavigationPage>
    </FlyoutPage.Detail>
</FlyoutPage>