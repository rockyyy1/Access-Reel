<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AccessReel.ArticlePage"
             Title="ArticlePage">
    
    <ScrollView>
        <VerticalStackLayout x:Name="ArticleLayout" HorizontalOptions="Center" WidthRequest="800">
            <Label x:Name="articleTitle" Text="Article Title" HorizontalOptions="Start" FontAttributes="Bold" LineBreakMode="WordWrap" VerticalOptions="StartAndExpand" WidthRequest="400" Margin="10"/>
            <Image x:Name="banner" Margin="10" HeightRequest="200" Aspect="AspectFit" HorizontalOptions="Start"/>
            <StackLayout x:Name="contentStackLayout" Margin="10" WidthRequest="380" HorizontalOptions="Start">
                <ContentView x:Name="FilmReviewContainer" />
            </StackLayout>
            <Button Text="AccessReel" 
                    BackgroundColor="Black" 
                    HorizontalOptions="Start"
                    WidthRequest="100"
                    TextColor="White"
                    Clicked="Button_Clicked"
                    Margin="10,50,0,0"/>
            <Label Text="AccessReel is the Western Australian movie-lovers website." Margin="10"/>
        </VerticalStackLayout>               
    </ScrollView>
</ContentPage>