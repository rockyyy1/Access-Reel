<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AccessReel.ArticlePage"
             Title="ArticlePage">
    
    <ScrollView>
        <VerticalStackLayout x:Name="ArticleLayout" HorizontalOptions="Center" WidthRequest="800">
            <Label x:Name="articleTitle" Text="Article Title" HorizontalOptions="Center" FontSize="Header" FontAttributes="Bold"/>
            <Image x:Name="banner" Margin="0,20,0,20"/>
            <StackLayout x:Name="contentStackLayout">
                <ContentView x:Name="FilmReviewContainer" />
            </StackLayout>
            <Button Text="AccessReel" 
                    BackgroundColor="Black" 
                    HorizontalOptions="Start"
                    WidthRequest="100"
                    TextColor="White"
                    Clicked="Button_Clicked"
                    Margin="00,50,0,0"/>
            <Label Text="AccessReel is the Western Australian movie-lovers website."/>
        </VerticalStackLayout>               
    </ScrollView>
</ContentPage>